<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:paddingLeft="@dimen/fab_margin"
        fab:menu_colorNormal="@android:color/holo_green_dark"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_maxLines="1"
        android:touchscreenBlocksFocus="true"
        fab:menu_backgroundColor="#ccffffff">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_white_24dp"
            fab:fab_size="mini"
            fab:fab_colorNormal="@android:color/holo_green_dark"
            fab:fab_label="Reminder" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attach_white_24dp"
            fab:fab_colorNormal="@android:color/holo_green_dark"
            fab:fab_size="mini"
            fab:fab_label="Attachment" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_white_24dp"
            fab:fab_colorNormal="@android:color/holo_green_dark"
            fab:fab_size="mini"
            fab:fab_label="Camera" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/handwriting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_handwriting_white_24dp"
            fab:fab_colorNormal="@android:color/holo_green_dark"
            fab:fab_size="mini"
            fab:fab_label="Handwriting" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_audio_white_24dp"
            fab:fab_colorNormal="@android:color/holo_green_dark"
            fab:fab_size="mini"
            fab:fab_label="Audio" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/text_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_text_note_white_24dp"
            fab:fab_colorNormal="@android:color/holo_green_dark"
            fab:fab_size="mini"
            fab:fab_label="Text Note" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>